<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taller1.DashboardController">
    <children>

        <VBox fx:id="menu" layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="200.0" style="-fx-background-color: #722F37; -fx-background-radius: 10;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="MENÚ" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                    </padding>
                </Label>

                <Button fx:id="btnClients" mnemonicParsing="false" onAction="#onClientsClick" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #722F37; -fx-font-weight: bold; -fx-background-radius: 5;" text="Clientes">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="btnMechanics" mnemonicParsing="false" onAction="#onMechanicsClick" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #722F37; -fx-font-weight: bold; -fx-background-radius: 5;" text="Mecánicos">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="btnAppointments" mnemonicParsing="false" onAction="#onAppointmentsClick" prefHeight="50.0" prefWidth="180.0" style="-fx-background-color: white; -fx-text-fill: #722F37; -fx-font-weight: bold; -fx-background-radius: 5;" text="Citas">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>

        <AnchorPane fx:id="mainContent" layoutX="230.0" layoutY="14.0" prefHeight="572.0" prefWidth="656.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10;">
            <children>
                <Label layoutX="150.0" layoutY="250.0" style="-fx-text-fill: #2c3e50;" text="Sistema de Gestión Taller">
                    <font>
                        <Font name="Book Antiqua" size="28.0" />
                    </font>
                </Label>
                <Label layoutX="220.0" layoutY="300.0" style="-fx-text-fill: #7f8c8d;" text="Clientes - Mecánicos - Citas">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
