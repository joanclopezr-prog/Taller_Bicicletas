<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taller1.AppointmentController">
    <children>
        <Label layoutX="300.0" layoutY="20.0" text="Gestión de Facturas">
            <font>
                <Font name="Book Antiqua Bold" size="28.0" />
            </font>
        </Label>

        <VBox layoutX="50.0" layoutY="70.0" prefHeight="200.0" prefWidth="700.0" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
            <Label text="Nueva Factura" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="8" vgap="8">
                <columnConstraints>
                    <ColumnConstraints prefWidth="100"/>
                    <ColumnConstraints prefWidth="250"/>
                    <ColumnConstraints prefWidth="100"/>
                    <ColumnConstraints prefWidth="250"/>
                </columnConstraints>

                <children>
                    <Label text="Fecha:" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="datePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Seleccione fecha"/>

                    <Label text="Cliente:" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cmbClient" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Seleccione Cliente" prefWidth="250"/>

                    <Label text="Mecánico:" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cmbMechanic" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Seleccione Mecánico" prefWidth="250"/>

                    <Label text="Total:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtTotal" GridPane.rowIndex="1" GridPane.columnIndex="3" disable="true" promptText="Calculado automáticamente"/>
                </children>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#onRegister" text=" Registrar Factura"
                        style="-fx-background-color: #722F37; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="btnClean" mnemonicParsing="false" onAction="#onClean" text=" Limpiar"
                        style="-fx-background-color: #722F37; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>

        <VBox layoutX="50.0" layoutY="300.0" prefHeight="250.0" prefWidth="700.0" spacing="10">
            <Label text="Historial de Facturas" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <TableView fx:id="tableBills" prefHeight="200.0" prefWidth="700.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID Factura" prefWidth="80"/>
                    <TableColumn fx:id="colClient" text="Cliente" prefWidth="150"/>
                    <TableColumn fx:id="colMechanic" text="Mecánico" prefWidth="150"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Fecha" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>